<%- include ('partials/header.ejs'); -%>
    <div class="standing-table-wrapper">
        <% if (players.length > 0) {%>
            <table class="table table-striped table-dark">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Player</th>
                    </tr>
                </thead>
                <tbody>
                    <% players.forEach((player, index) => { %>
                        <tr>
                            <td><%= player.Player %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/addPlayer" >here</a> to add players.</p>
        <% } %>
    </div>
    <div class="standing-form">
        <label>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Example: Players that placed 'First' in '2012'
        </label>
        <form action="/standingForm" method="POST">
            <label class="text-dark font-weight-bold">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Find a player &nbsp;&nbsp;</label>
            <label>Placed:</label>
            <input type="text" name="place">
            <label>&nbsp;&nbsp;Year:</label>
            <input type="text" name="year"> &nbsp;&nbsp;
            <input class="btn-primary" type="submit" name="submit" value="Find"/> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </form>
    </div>
</body>
</html>