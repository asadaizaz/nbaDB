<%- include ('partials/header.ejs'); -%>
    <div class="table-wrapper">
        <a href='/addTeam'><button type="button" class="btn btn-sm btn-primary float-right">Add Team</button></a>
        <a href='/hideArena'><button type="button" class="btn btn-sm btn-light float-right">Hide Arena</button></a>
        <% if (teams.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Logo</th>
                        <th scope="col">City</th>
                        <th scope="col">Name</th>
                        <th scope="col">Country</th>
                        <th scope="col">Arena</th>
                    </tr>
                </thead>
                <tbody>
                    <% teams.forEach((team, index) => { %>
                        <tr>
                            <th scope="row"><%= team.id %></th>
                            <td><img src=<%=team.logo%> style="width:40px;height:40px;"/></td>
                            <td><%= team.city %></td>
                            <td><%= team.teamname %></td>
                            <td><%= team.country %></td>
                            <td><%= team.arena %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No teams found. Go <a href="/addTeam" >here</a> to add teams.</p>
        <% } %>
    </div>
</div>
</body>
</html>